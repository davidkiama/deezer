{{page-title 'Home'}}
<GeneralContainer>

  <div class='artists'>

    {{#each @model as |artist|}}
      <LinkTo @route='detail' @model={{artist.id}} class='artist'>

        <Image
          @big={{artist.picture_big}}
          @medium={{artist.picture_medium}}
          @small={{artist.picture_small}}
          @cover={{artist.picture}}
          @class='artist__image'
          @alt='Artist Image'
        />

        <h3 class='artist__name'>{{artist.name}}</h3>
        <p class='artist__footer'>
          <span>{{artist.albums}} Albums</span>
          &nbsp; &#x2022; &nbsp;
          <span> {{artist.fans}} Fans</span>
        </p>
      </LinkTo>
    {{/each}}

  </div>

</GeneralContainer>